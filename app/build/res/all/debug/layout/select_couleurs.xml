            android:id="@+id/jaune"
            android:src="@drawable/jaune_3"
            android:contentDescription="@string/jaune"
            style="@style/btnCouleur" />

        <ImageButton
            android:id="@+id/rose"
            android:src="@drawable/rose_5"
            android:contentDescription="@string/rose"
            style="@style/btnCouleur" />

    </LinearLayout>
</LinearLayout>
